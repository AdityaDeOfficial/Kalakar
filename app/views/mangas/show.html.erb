  width: auto;
  height: 100%;
  object-fit: cover;
  border-radius: 10px;
}

.h2-style {
  display: inline-block;
  background-color: rgba(0, 0, 0, 0.8);
  color: #FFFFD2;
  padding: 5px 10px;
  border-radius: 10px;
}

.button {
background-color: #FFFFD2;
font-size: 20px;
/* font-weight: bold; */
padding: 15px;
text-decoration: none;
border-radius: 5px;
