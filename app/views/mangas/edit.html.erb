<style>
  .edit-manga-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 1rem;
  }

  .edit-manga-title {
    font-size: 2rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .form-inputs {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .actions {
    text-align: center;
    margin-top: 1rem;
  }
</style>

<div class="edit-manga-container">
  <h1 class="edit-manga-title">Edit Manga</h1>

  <%= form_with(model: @manga, local: true, html: { multipart: true }) do |form| %>
    <% if @manga.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@manga.errors.count, "error") %> prohibited this manga from being saved:</h2>

        <ul>
          <% @manga.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-inputs">
      <div class="field">
        <%= form.label :manga_title %>
        <%= form.text_field :manga_title %>
      </div>

      <div class="field">
        <%= form.label :author %>
        <%= form.text_field :author %>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div class="field">
        <%= form.label :cover_image %>
        <%= form.file_field :cover_image %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

  <div class="back-links">
    <%= link_to 'Show', @manga %> |
    <%= link_to 'Back', mangas_path %>
  </div>
</div>
