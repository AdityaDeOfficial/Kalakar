<%# new/edit manga form %>
<%= form_with(model: @manga, local: true, html: { multipart: true }) do |form| %>
  <% if @manga.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@manga.errors.count, "error") %> prohibited this manga from being saved:</h2>
      <ul>
        <% @manga.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <div class="field">
      <%= form.label :manga_title %>
      <%= form.text_field :manga_title %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="field">
      <%= form.label :tag_list, 'Tags (separated by commas)' %>
      <%= form.text_field :tag_list, value: @manga.tag_list.join(", ") %>
    </div>

    <label for="images" class="drop-container">
      <span class="drop-title">Drop files here</span>
      or
      <input type="file" id="images" accept="image/*" required>
    </label>

    <div>
      <%= form.submit "Submit", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
