<style>
  .manga-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    grid-gap: 1rem;
    margin-bottom: 1rem;
  }

  .manga-card {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 1rem;
    text-align: center;
  }

  .manga-title {
    font-size: 1.1rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .manga-author {
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .manga-description {
    font-size: 0.8rem;
    margin-bottom: 0.5rem;
  }
</style>

<h1>Mangas</h1>

<div class="manga-container">
  <% @mangas.each do |manga| %>
    <div class="manga-card">
      <% if manga.cover_image.attached? %>
        <%= cl_image_tag manga.cover_image.key, width: 180, height: 270, crop: :fill, alt: manga.manga_title %>
      <% else %>
        <p>No cover image</p>
      <% end %>
      <p class="manga-title"><%= link_to manga.manga_title, manga %></p>
      <p class="manga-author"><%= manga.author %></p>
      <p class="manga-description"><%= manga.description.truncate(50) %></p>
      <p><%= link_to 'Show', manga %></p>
      <p><%= link_to 'Edit', edit_manga_path(manga) %></p>
      <p><%= link_to 'Destroy', manga_path(manga), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  <% end %>
</div>

<%= link_to 'New Manga', new_manga_path %>
