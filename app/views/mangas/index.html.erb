<%# manga genre ->css:_navabr %>
<div>
<ul class="manga-genre-navbar border border-primary d-flex justify-content-around align-items-center">
  <li class="border border-primary">Adventure</li>
  <li>Fantasy</li>
  <li>Sci-Fic</li>
  <li>Romance</li>
  <li>Supernatural</li>
  <li>Historical</li>
  <li>SuperHero</li>
  <li>BL</li>
  <li>GL</li>
</ul>
</div>

<%= form_with url: mangas_path, method: :get, html: { class: "d-flex search-form" }, data: {turbo_frame: :dropdown_search_results} do |form| %>
  <%= form.text_field :search, placeholder: "Search Manga (everything)", class: "form-control me-2", data: { controller: 'search', action: 'keyup->search#submitForm'} %>
  <%#= form.submit "Search", class: "btn btn-outline-primary" %>
<% end %>

<%# dropdown search partial contains turbo_frame_tag with id of 'dropdown_search_results' %>
<%= render 'mangas/dropdown_search_results', results: @mangas %>

  <h1>Top & Popular Manga</h1>

  <%# top mangas %>
  <div class="cards">
    <% @mangas.each do |manga| %>
      <div class="card border border-primary", onclick="location.href='<%= manga_path(manga) %>'">
        <% if manga.cover_image.attached? %>
          <%= cl_image_tag manga.cover_image.key, crop: :fill, alt: manga.manga_title %>
        <% else %>
          <p>No cover image</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

