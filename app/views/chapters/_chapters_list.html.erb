<%# ------------------------------- %>
<% chapters.each do |chapter| %>
  <div class="chapter-item">
    <div class="chapter-title">
      <%= "Chapter #{chapter.chapter_number}: #{chapter.chapter_title}" %>
    </div>
    <div class="chapter-actions">
      <%= link_to 'Show', manga_chapter_path(manga, chapter), class: 'chapter-button' %>
      <%= link_to 'Edit', edit_manga_chapter_path(manga, chapter), class: 'chapter-button' %>
    </div>
  </div>
<% end %>
