<%= form_with(model: [ @manga, chapter ], local: true) do |form| %>
  <% if chapter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>

      <ul>
        <% chapter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :chapter_number %>
    <%= form.number_field :chapter_number %>
  </div>

  <div class="field">
    <%= form.label :chapter_title %>
    <%= form.text_field :chapter_title %>
  </div>

  <div class="field">
   <%= form.label :chapter_photos %>
   <%= form.file_field :chapter_photos, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
