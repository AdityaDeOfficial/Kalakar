<div class="container">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :avatar,
                  as: :file,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "avatar" }%>
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :bio,
                  label: "About Me",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "About me", placeholder: "Tell us about yourself here :D !" }%>
      <%= f.input :instagram,
                  label: "Your Instagram",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "instagram url", placeholder:"Link your Instagram Account here ðŸ“¸" }%>
      <%= f.input :twitter,
                  label: "Your Twitter",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "twitter url", placeholder:"Link your Twitter Account hereðŸ¦" }%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "button" %>
    </div>

  <% end %>
</div>
  <div class="d-flex justify-content-center border border-primary">
    <%= render "devise/shared/links" %>
  </div>
